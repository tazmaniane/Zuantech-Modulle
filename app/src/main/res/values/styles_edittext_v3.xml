<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EditTextRoot" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_secondary</item>
        <item name="drawableTint">@color/grey_dark</item>
        <item name="android:minHeight">@dimen/_38sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:background">@drawable/bg_form_transparent</item>
        <!--        <item name="android:paddingTop">0dp</item>-->
        <!--        <item name="android:paddingBottom">0dp</item>-->
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
    </style>

    <style name="EdittextPrimary" parent="EditTextRoot">
        <item name="android:background">@drawable/bg_form_primary</item>
    </style>

    <style name="EdittextRootBold" parent="EditTextRoot">
        <item name="fontFamily">@font/manrope_extrabold</item>
    </style>

    <style name="EdittextWhite" parent="EditTextRoot">
        <item name="android:background">@drawable/bg_form_white</item>
    </style>

</resources>