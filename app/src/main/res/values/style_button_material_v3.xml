<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonShadowStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:minHeight">@dimen/_45sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:background">@null</item>
        <item name="elevation">@dimen/_3sdp</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/manrope_extrabold</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

    <style name="MaterialButtonWhite" parent="@style/ButtonShadowStyle">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="iconTint">@color/blue_dark</item>
    </style>

