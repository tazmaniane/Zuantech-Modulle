<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        style="@style/CardViewShadowStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:clickable="false"
        android:focusable="false"
        app:cardCornerRadius="@dimen/_12sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="@dimen/_200sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_lightest"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_10sdp">

                <!--                <ImageView-->
                <!--                    android:layout_width="@dimen/_12sdp"-->
                <!--                    android:layout_height="@dimen/_12sdp"-->
                <!--                    android:layout_marginEnd="@dimen/_5sdp"-->
                <!--                    android:layout_marginRight="@dimen/_5sdp"-->
                <!--                    android:adjustViewBounds="true"-->
                <!--                    android:src="@drawable/ic_popup_fail"-->
                <!--                    app:tint="@color/red_base" />-->

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/Text_H3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:text="Informasi"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvMessage"
                style="@style/Text_Sub3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center"
                tools:text="Message" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPositive"
                    style="@style/MaterialButtonBlueBase"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:fontFamily="@font/manrope_bold"
                    android:insetTop="@dimen/_2sdp"
                    android:insetBottom="@dimen/_2sdp"
                    android:minWidth="@dimen/_100sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:text="Ok, tutup"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>