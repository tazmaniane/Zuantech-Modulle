<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        style="@style/CardViewShadowStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:clickable="false"
        android:focusable="false"
        app:cardCornerRadius="@dimen/_12sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="@dimen/_200sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_base"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_16sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_coffee"
                    app:tint="@color/white" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvMessage"
                style="@style/Text_H4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"
                android:text="Fitur sedang dalam pengembangan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPositive"
                    style="@style/MaterialButtonWhiteStrokeOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:fontFamily="@font/manrope_bold"
                    android:insetTop="@dimen/_2sdp"
                    android:insetBottom="@dimen/_2sdp"
                    android:minWidth="@dimen/_100sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:text="Ok, tutup"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>